<h1>Listing things</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Description</th>
    <th>Near</th>
    <th>Listed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @things.each do |thing| %>
  <tr>
    <td><%= image_tag thing.image_url(:thumb).to_s %></td>
    <td><%= thing.title %></td>
    <td><%= thing.description %></td>
    <td><%= thing.address %></td>
    <td><%= "#{time_ago_in_words(thing.created_at)} ago" %></td>
    <td><%= link_to 'Show', thing %></td>
    <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
    <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

